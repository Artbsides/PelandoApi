{
  "name": "pelando-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"Api/**/*.ts\" \"ApiTests/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug 0.0.0.0:9229 --watch",
    "start:prod": "node dist/Api/Main",
    "lint": "eslint \"{Api,ApiTests}/**/*.ts\"",
    "lint:fix": "eslint \"{Api,ApiTests}/**/*.ts\" --fix",
    "tests": "jest",
    "tests:watch": "jest --watch",
    "tests:cov": "jest --coverage",
    "tests:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "tests:e2e": "jest --config ./ApiTests/jest-e2e.json"
  },
  "dependencies": {
    "@fastify/static": "^6.9.0",
    "@nestjs/axios": "^2.0.0",
    "@nestjs/class-transformer": "^0.4.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.0.0",
    "@nestjs/jwt": "^10.0.2",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/platform-fastify": "^9.3.9",
    "@nestjs/swagger": "^6.2.1",
    "@prisma/client": "^4.11.0",
    "axios": "^1.3.4",
    "cache-manager": "^5.1.7",
    "cache-manager-redis-store": "^3.0.1",
    "class-validator": "^0.14.0",
    "node-html-parser": "^6.1.5",
    "passport-jwt": "^4.0.1",
    "redis": "^4.6.5",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "ts-md5": "^1.3.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/cache-manager": "^4.0.2",
    "@types/express": "^4.17.13",
    "@types/jest": "29.2.4",
    "@types/node": "18.11.18",
    "@types/passport-jwt": "^3.0.8",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.3.1",
    "prettier": "^2.8.4",
    "prettier-plugin-multiline-arrays": "^1.1.3",
    "prisma": "^4.11.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.1",
    "typescript": "^4.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "Api",
      "ApiTests"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "Api/**/{!(Main),}.(t|j)s"
    ],
    "moduleNameMapper": {
      "^Api/(.*)$": "<rootDir>/Api/$1",
      "^ApiTests/(.*)$": "<rootDir>/ApiTests/$1"
    },
    "coverageDirectory": "ApiTests/Coverage",
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "lines": 90
      }
    }
  }
}
